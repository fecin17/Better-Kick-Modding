{
  "manifest_version": 3,
  "name": "Kick Chat Enhancer",
  "version": "1.1.0",
  "description": "Vylepšuje vzhled a čitelnost chatu na Kick.com – inspirace Twitchem",
  "permissions": ["storage"],
  "host_permissions": ["https://*.kick.com/*"],
  "content_scripts": [
    {
      "matches": ["https://*.kick.com/*"],
      "css": ["styles/chat-enhancements.css"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://*.kick.com/*"],
      "js": ["content/page-bridge.js"],
      "world": "MAIN",
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles/chat-enhancements.css"],
      "matches": ["https://*.kick.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Kick Chat Enhancer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
